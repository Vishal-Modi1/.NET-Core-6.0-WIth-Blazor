@using System;
@using System.ComponentModel.DataAnnotations;
@using DataModels.VM.Account;

@page "/PasswordRequested"

@layout EmptyLayout
@namespace Web.UI.Pages.Account

@inject IJSRuntime JSRunTime

<PageTitle>Password Requested | Fly Manager </PageTitle>

<div class="row vh-100 align-items-center m-0">
    <div class="col-md-3 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="upfly-logo mt-3 d-flex justify-content-center">
                    <CustomIcons IconName="system-logo"></CustomIcons>
                </div>
                <div class="m-3 pt-0">
                    <div class="text-center my-3 pt-1">
                        <div class="mt-3 p-2">
                            <span class="text-wrap"><FontLabel fontSize="25px">You have requested to reset your password</FontLabel></span>
                        </div>
                        <div class="mt-2 text-wrap">
                            <span><FontLabel>We cannot simply send you your old password. A unique link to reset your password has been generated for you.
                                    To reset your password, click the following link.
                            </FontLabel></span>
                        </div>
                        <div class="mt-3">
                            <TelerikButton ButtonType="@ButtonType.Submit" ThemeColor="info" Class="login-button btn k-btn-primary">
                                Reset Password
                            </TelerikButton>
                        </div>
                        <div class="mt-5">
                            <div class="text-center">
                                Suddenly remembered? <a href="/login" style="color:#1151F3"> Login Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

