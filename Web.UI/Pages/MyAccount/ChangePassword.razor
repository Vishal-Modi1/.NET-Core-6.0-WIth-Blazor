@using DataModels.VM.MyAccount;
@using Web.UI.Shared.Components;

@page "/ChangePassword"

<style>
    form .row {
        margin-bottom: 16px;
    }
</style>

<PageTitle>Change Password | Fly Manager </PageTitle>

<div class="card p-3 col-9" style="margin-top:30px;">
    <div class="col-4">
        <div class="d-flex justify-content-between">
            <div>
                <ComponentTitle Title="Change Password" Type="AdministrationTitle" />
            </div>
        </div>
        <hr class="mt-2 my-1" />
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-5 d-flex align-items-center justify-content-start">
            <div class="w-100">
                <div class="row my-2">
                    <div class="col-12">
                        <TelerikForm Model="@changePasswordVM" OnValidSubmit="@Submit">
                            <FormValidation>
                                <DataAnnotationsValidator></DataAnnotationsValidator>
                            </FormValidation>
                            <FormItems>
                                <div class="my-2"></div>
                                <div class="row my-3">
                                    <div class="col-md-12 align-items-center d-flex">
                                        <label for="oldPassword" class="col-md-4 k-label k-form-label">Current Password</label>
                                        <TelerikTextBox Id="oldPassword" @bind-Value="@changePasswordVM.OldPassword"></TelerikTextBox>
                                        <TelerikValidationMessage For="@(() => changePasswordVM.OldPassword)"></TelerikValidationMessage>
                                    </div>
                                </div>

                                <div class="row my-3">
                                    <div class="col-md-12 align-items-center d-flex">
                                        <label for="newPassword" class="col-md-4 k-label k-form-label">New Password</label>
                                        <TelerikTextBox Id="newPassword" @bind-Value="@changePasswordVM.NewPassword"></TelerikTextBox>
                                        <TelerikValidationMessage For="@(() => changePasswordVM.NewPassword)"></TelerikValidationMessage>
                                    </div>
                                </div>

                                <div class="row my-3">
                                    <div class="col-md-12 align-items-center d-flex">
                                        <label for="confirmPassword" class="col-md-4 k-label k-form-label">Confirm Password</label>
                                        <TelerikTextBox Id="confirmPassword" @bind-Value="@changePasswordVM.ConfirmPassword"></TelerikTextBox>
                                        <TelerikValidationMessage For="@(() => changePasswordVM.ConfirmPassword)"></TelerikValidationMessage>
                                    </div>
                                    <div class="col-md-12 align-items-center d-flex">
                                        <div class="col-md-4"></div>
                                        <FontLabel Class="flex-wrap mt-2" fontColor="#979797">* 8 Characters or longer. Combine upper and lower case letters and numbers.</FontLabel>
                                    </div>
                                </div>

                                @*  <div class="row" style="margin-top:4%">
                                <div class="col-md-12 text-right">
                                <RadzenButton ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Primary" BusyText="Updating ..." IsBusy="@isBusy" Text="Update" Style="width: 130px" />
                                <RadzenButton Click="@((args) => CloseDialog(true))" ButtonStyle="ButtonStyle.Light" Text="Cancel" Style="width: 120px" Class="mr-1" />
                                </div>
                                </div>
                                *@
                            </FormItems>
                            <FormButtons>
                                <div class="row mx-3 my-2">
                                    <div class="my-2 col-12 d-flex justify-content-end">
                                        <TelerikButton ButtonType="@ButtonType.Submit" ThemeColor="info" Class="btn k-btn-primary mx-0" Enabled="@(!isBusySubmitButton)">
                                            Change Password
                                            <TelerikLoader Class="button-loader-indicator" ThemeColor="light" Visible="@isBusySubmitButton">
                                            </TelerikLoader>
                                        </TelerikButton>
                                    </div>
                                </div>
                            </FormButtons>
                        </TelerikForm>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1 d-flex align-items-center justify-content-center" 
             style="border-left:1px solid #AEAFB0;height:250px;width:5px;margin-left:25px;"></div>
        
        <div class="col-xs-12 col-sm-12 col-md-5 d-flex align-items-center justify-content-start">
            <div class="">
                <div class="row my-2">
                    <div class="col-12">
                        <FontLabel fontSize="17px">Characteristics of Strong Passwords</FontLabel>
                    </div> 
                    <div class="col-12 p-3">
                        <ul>
                            <li class="mb-2">
                                <FontLabel fontColor="#555555">At least 12 characters (required for your Muhlenberg password)—the more characters, the better</FontLabel>
                            </li>
                            <li class="mb-2">
                                <FontLabel fontColor="#555555">A mixture of both uppercase and lowercase letters</FontLabel>
                            </li>
                            <li class="mb-2">
                                <FontLabel fontColor="#555555">A mixture of letters and numbers</FontLabel>
                            </li>
                            <li>
                                <FontLabel fontColor="#555555">Inclusion of at least one special character, e.g., ! @@ # ? ]</FontLabel>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
