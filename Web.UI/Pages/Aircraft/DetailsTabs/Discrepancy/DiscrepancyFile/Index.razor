                    </TelerikButton>

                    <TelerikButton ThemeColor="secondary" Class="btn k-btn-secondary" OnClick="() => isDisplayPopup = false">
                    No
                    </TelerikButton>

                    </div>
                    </div>
                    </div>*@
            }
        </Body>
    </CustomPopupComponent>
}