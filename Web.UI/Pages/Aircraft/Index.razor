        border-radius: 7.53514px;
        padding: 15px;
    }

    .custom-aircraft-img {
        min-width: 100%;
        min-height: 135px;
        max-width: 100%;
        max-height: 135px;
        width: 100%;
        height: 135px;
        padding:4px;
    }

    .active-airplane {
        position: relative;
        top: 10px;
        left: 0;
        z-index: 1;
        border-radius: 100%;
        height: 5px;
        width: 5px;
    }

    .inactive-airplane {
        background: red;
    }

    .expande-airplane {
        position: relative;
        top: 20px;
        left: 120px;
        z-index: 1;
        background-color: #b1b1b138;
    }
    .listview-item {
        display: inline-block;
        margin: 10px;
        padding: 10px;
        box-shadow: 4.70946px 4.70946px 24.4892px rgba(0, 0, 0, 0.1);
        border-radius: 7.53514px;
        cursor:pointer !important;
    }
