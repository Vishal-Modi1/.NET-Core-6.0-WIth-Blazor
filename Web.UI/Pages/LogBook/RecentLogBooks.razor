@using DataModels.VM.LogBook;



<div class="card-header">
    <div class="p-0 d-flex justify-content-start align-items-center">
        <span>Recent Logbooks</span>
    </div>
</div>

<div class="card-body p-0">

    @foreach (LogBookSummaryVM logBookSummaryVM in logBookSummaries)
    {
        <div class="p-2" @onclick="@(() => EditLogBookInfo(logBookSummaryVM.Id))" style="cursor:pointer">
            <div class="d-flex justify-content-between align-items-center logList">
                <span class="d-flex justify-content-between align-items-center">

                    <span>
                        <div>
                            <FontLabel fontColor="#45cf10">@logBookSummaryVM.Departure-@logBookSummaryVM.Arrival</FontLabel>
                        </div>
                        <div>
                            <FontLabel fontColor="#d61ad3">@logBookSummaryVM.TailNo</FontLabel>
                        </div>
                    </span>
                </span>

                <span class="d-flex justify-content-between align-items-center">
                    <span>
                        <div>
                            <FontLabel fontSize="10px" fontColor="#042455">@logBookSummaryVM.Date.SetCustomFormat(logBookSummaryVM.Date,globalMembers.DateFormat,false)</FontLabel>
                        </div>

                    </span>
                    <span class="ms-2">
                        <CustomIcons IconName="cheveron-right" PrimaryColor="black" />
                    </span>
                </span>

            </div>
        </div>
        <hr class="m-0" />
    }
</div>