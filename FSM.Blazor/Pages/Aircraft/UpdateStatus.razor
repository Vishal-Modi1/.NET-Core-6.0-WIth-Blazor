@using DataModels.VM.Aircraft
@using FSM.Blazor.Data.Aircraft
@using FSM.Blazor.Utilities;
@using DataModels.Enums;

@inject AircraftService AircraftService

<RadzenTemplateForm @ref=@form Data="@AircraftData" Submit="@((AircraftVM args) => {  Update(args); })">

    <div class="popup-content">

        <input type="hidden" value="@AircraftData.Id" name="Id" />

        <div class="row">
            <div class="col-md-12 align-items-center d-flex">
                <RadzenLabel Text="Aircraft Status" />
            </div>
            <div class="col-md-12">
                <RadzenDropDown @bind-Value="@aircraftStatusId" Style="width:100%;" TValue="int"
                                TextProperty="Name" Placeholder="Select Status"
                                Data="@AircraftData.AircraftStatusList"
                                Name="AircraftStatusId" ValueProperty="Id" AllowClear="true">

                </RadzenDropDown>
                <RadzenRequiredValidator DefaultValue="0" Component="AircraftStatusId" Text="Status is required" Style="position: relative" />

            </div>
        </div>

        <hr />
        <div class="row" style="margin-top:4%">
            <div class="col-md-12 text-right">

                <RadzenButton ButtonType="ButtonType.Submit" BusyText="Updating .." IsBusy="@isBusy" ButtonStyle="ButtonStyle.Success" Text="Update" Style="width: 125px" />
                <RadzenButton Click="@((args) => CloseDialog(true))" ButtonStyle="ButtonStyle.Light" Text="Cancel" Style="width: 120px" Class="mr-1" />

            </div>
        </div>

    </div>

</RadzenTemplateForm>