@using DataModels.Enums

<RadzenTabs RenderMode="TabRenderMode.Client">
    <Tabs>
        <RadzenTabsItem Text="Aircraft Times">

            <AircraftEquipmentsTimes AircraftData=@AircraftData></AircraftEquipmentsTimes>

        </RadzenTabsItem>

        <RadzenTabsItem Text="Description">

            <Description AircraftData=@AircraftData></Description>

        </RadzenTabsItem>

        <RadzenTabsItem Text="Equipments">

            <FSM.Blazor.Pages.Aircraft.DetailsTabs.AircraftEquipment.Index AircraftId=@AircraftData.Id CreatedBy=@AircraftData.CreatedBy>

            </FSM.Blazor.Pages.Aircraft.DetailsTabs.AircraftEquipment.Index>

        </RadzenTabsItem>

        @if (_currentUserPermissionManager.IsAllowed(AuthStat, PermissionType.View, "Reservation"))
        {
            <RadzenTabsItem Text="Reservations">

                <FSM.Blazor.Pages.Reservation.Index  ParentModuleName="Aircraft"  AircraftId="@AircraftData.Id">

                </FSM.Blazor.Pages.Reservation.Index>

            </RadzenTabsItem>
        }
        @if (_currentUserPermissionManager.IsAllowed(AuthStat, PermissionType.View, "Document"))
        {
            <RadzenTabsItem Text="Documents">

                <FSM.Blazor.Pages.Document.Index ParentModuleName="Aircraft">

                </FSM.Blazor.Pages.Document.Index>

            </RadzenTabsItem>
        }
    </Tabs>
</RadzenTabs>