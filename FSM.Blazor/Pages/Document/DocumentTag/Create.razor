@using DE = DataModels.Entities
@using DataModels.VM.Document
@using FSM.Blazor.Data.Document

@inject Radzen.DialogService DialogService
@inject DocumentService DocumentService

<style>
    form .row {
        margin-bottom: 16px;
    }
</style>

<RadzenTemplateForm Data="@documentTagVM" Submit="@((DocumentTagVM args) => {  Submit(); })">

    <input type="hidden" value="@documentTagVM.Id" name="Id" />

    <RadzenFieldset Text="Document tag info">

        <div class="row">
            <div class="col-md-4 align-items-center d-flex">
                <RadzenLabel Text="Tag Name" />
            </div>
            <div class="col-md-8">
                <RadzenTextBox style="width: 100%;" Placeholder="Please enter tag name" Name="TagName" @bind-Value="@documentTagVM.TagName" />
                <RadzenRequiredValidator Component="TagName" Text="Tag is required" Popup="@isPopup" Style="position: relative"/>
            </div>
        </div>

    </RadzenFieldset>

    <div class="row" style="margin-top:4%">
        <div class="col-md-12 text-right">
            <RadzenButton ButtonType="ButtonType.Submit"  Text="Save" Style="width: 120px" />
            <RadzenButton  Click="@((args) => DialogService.Close(false))" ButtonStyle="ButtonStyle.Secondary" Text="Cancel" Style="width: 120px" Class="mr-1" />
        </div>
    </div>

</RadzenTemplateForm>