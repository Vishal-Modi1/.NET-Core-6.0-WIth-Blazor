@namespace FSM.Blazor.Pages.Account

@using DataModels.VM.Account
@using FSM.Blazor.Data.Account
@layout EmptyLayout

@inject AccountService AccountService
@inject NavigationManager NavigationManager

@page "/ResetPassword"

<div class="row vh-100 d-flex justify-content-center align-items-center">
    <div class="col-lg-6 col-xl-4 ">
        <RadzenCard class="m-3">

            <RadzenBadge BadgeStyle="BadgeStyle.Danger" @ref="alertMessage" Text="" Visible="false" />

            <h2 class="mb-4">Reset Password</h2>
            <RadzenTemplateForm TItem="ResetPasswordVM" Data=@resetPasswordVM Submit="@((ResetPasswordVM args) => {  Submit(args); })">

                <div class="row">
                    <div class="col-md-4 align-items-center d-flex">
                        <RadzenLabel Text="New Password" />
                    </div>
                    <div class="col-md-8">
                        <RadzenPassword Placeholder="Please enter new password" Name="Password" Class="w-100" @bind-Value=@resetPasswordVM.Password />
                        <RadzenRequiredValidator Component="Password" Text="New password is required" Popup="@isPopup" Style="position: relative" />
                    </div>
                </div>

                  <div class="row">
                    <div class="col-md-4 align-items-center d-flex">
                        <RadzenLabel Text="Confirm Password" />
                    </div>
                    <div class="col-md-8">
                       <RadzenPassword Placeholder="Please enter confirm password" Name="ConfirmPassword" Class="w-100" @bind-Value=@resetPasswordVM.ConfirmPassword />
                    <RadzenCompareValidator Component="ConfirmPassword" Value=@resetPasswordVM.Password Text="Confirm password should be the same" Popup="@isPopup" Style="position: relative" />
                    </div>
                </div>

                <div class"row">

                    <RadzenButton ButtonType="ButtonType.Submit" Disabled=@isDisableResetButton Text="Reset Password" />
                    <RadzenLink Path="/login" Text="Back to Login" />

                </div>
            </RadzenTemplateForm>
        </RadzenCard>
    </div>
</div>



