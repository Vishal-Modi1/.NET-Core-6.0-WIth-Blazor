@namespace FSM.Blazor.Pages.Account
@using DataModels.VM.Account;
@using FSM.Blazor.Data.Account
@layout EmptyLayout

@inject AccountService AccountService

@page "/Forgetpassword"

<style>
    form .row {
        margin-bottom: 16px;
    }

    .rz-card {
        padding: 0px !important;
        width: 87% !important;
    }

    .p-md-5 {
        padding: 2rem !important;
    }

    .mb-4 {
        margin-top: -1rem;
    }

    .login-wrap {
        width: 100%
    }

    .login-wrap {
        position: relative;
        background: #fff h3;
        background-font-weight: 3000
    }

    .form-group {
        position: relative
    }

        .form-group .label {
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #000;
            font-weight: 700
        }

    .form-control {
        height: 36px;
        background: #fff;
        color: #000;
        font-size: 16px;
        border-radius: 5px;
        -webkit-box-shadow: none;
        box-shadow: none;
        border: 1px solid rgba(0,0,0,.1)
    }

        .form-control::-webkit-input-placeholder {
            color: rgba(0,0,0,.2) !important
        }

    .btn {
        cursor: pointer;
        -webkit-box-shadow: none !important;
        box-shadow: none !important;
        font-size: 15px;
        padding: 10px 20px
    }

        .btn.btn-primary {
            background: #1151F3 !important;
            border: 1px solid #1151F3 !important;
            color: #fff !important
        }

</style>

<PageTitle>Forgot Password | Fly Manager </PageTitle>

@if (ForgotPasswordVM != null)
{
    <div class="row vh-100 d-flex justify-content-center align-items-center">
        <div class="col-lg-6 col-xl-4">
            <RadzenCard class="m-3">

                <RadzenTemplateForm TItem="ForgotPasswordVM" Data=@ForgotPasswordVM Submit="@((ForgotPasswordVM args) => {  Submit(); })">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Forgot Password ?</h3>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <RadzenLabel Text="Email" />

                            <RadzenTextBox Placeholder="Email" Name="Email" Class="w-100" @bind-Value=@ForgotPasswordVM.Email />
                            <RadzenRequiredValidator Component="Email" Text="Email is required" Popup="@isPopup" Style="position: relative" />
                            <RadzenEmailValidator Component="Email" Text="Email is invalid" Popup="@isPopup" Style="position: relative" />

                        </div>

                        <div class="form-group">
                             <RadzenButton ButtonType="ButtonType.Submit" Style="height:40px;" class="form-control btn btn-primary rounded submit px-3" Text="@submitButtonText" BusyText="Sending Mail ..." IsBusy="@isBusy" />
                        </div>
                        <div class="d-md-flex">
                          
                            <div class="w-50 text-left">
                                <RadzenLink Path="/login" Text="Back to Login" />
                            </div>

                        </div>
                    </div>

                </RadzenTemplateForm>
            </RadzenCard>
        </div>
    </div>
}
