@using DataModels.VM.InstructorType
@using FSM.Blazor.Data.InstructorType

@inject Radzen.DialogService DialogService
@inject InstructorTypeService InstructorTypeService

<style>
    form .row {
        margin-bottom: 16px;
    }
</style>

<RadzenTemplateForm Data="@instructorTypeData" Submit="@((InstructorTypeVM args) => {  Submit(args); })">

    <input type="hidden" value="@instructorTypeData.Id" name="Id" />

    <RadzenFieldset Text="Purchase Info">

        <div class="row">
            <div class="col-md-4 align-items-center d-flex">
                <RadzenLabel Text="Name" />
            </div>
            <div class="col-md-8">
                <RadzenTextBox style="width: 100%;" Placeholder="Please enter name" Name="Name" @bind-Value="@instructorTypeData.Name" />
                <RadzenRequiredValidator Component="Name" Text="Name is required" Popup="@isPopup" Style="position: relative" />
            </div>
        </div>

    </RadzenFieldset>

    <div class="row" style="margin-top:4%">
        <div class="col-md-12 text-right">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Save" Style="width: 120px" IsBusy=@isBusy BusyText="Saving ..." />
            <RadzenButton Click="@((args) => DialogService.Close(false))"
                          ButtonStyle="ButtonStyle.Secondary" Text="Cancel" Style="width: 120px" Class="mr-1" />
        </div>
    </div>

</RadzenTemplateForm>